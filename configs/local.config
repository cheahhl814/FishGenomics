process {
    executor = 'local'
    withName:nanoplot {
        conda = 'envs/nanoplot.yml'
    }
    withName:porechop {
        conda = 'envs/porechop.yml'
    }
    withName:filtlong {
        conda = 'envs/filtlong.yml'
    }
    withName:removeContaminant {
        conda = 'envs/minimap2.yml'
    }
    withName:canu {
        conda = 'envs/canu.yml'
    }
    withName:wtdbg2 {
        conda = 'envs/wtdbg2.yml'
    }
    withName:flye {
        conda = 'envs/flye.yml'
    }
    withName:raven {
        conda = 'envs/raven.yml'
    }
    withName:shasta {
        conda = 'envs/shasta.yml'
    }
    withName:racon {
        conda = 'envs/racon.yml'
    }
    withName:scaffold {
        conda = 'envs/ragtag.yml'
    }
    withName:scaffold2 {
        conda = 'envs/ragtag.yml'
    }
    withName:patch* {
        conda = 'envs/ragtag.yml'
    }
    withName:quickmerge* {
        conda = 'envs/quickmerge.yml'
    }
    withName:quast* {
        conda = 'envs/quast.yml'
    }
    withName:busco* {
        conda = 'envs/busco.yml'
    }
    withName:galignment {
        conda = 'envs/mummer4.yml'
    }
    withName:multiqc {
        conda = 'envs/multiqc.yml'
    }
}

// Enable conda (micromamba) integration
conda {
    enabled = true
    useMicromamba = true
    cacheDir = "$HOME/micromamba"
    micromambaPath = "$HOME/.local/bin/micromamba"
}
